@model SoftNET_Project.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<div class="card mb-4 mt-2">
    <div class="card-body">
        <h1>Edit Product</h1>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <i class="fa-solid fa-boxes-stacked"></i>
        <span class="font-weight-bold">Product: </span>@Model.ProductName
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Barcode" class="control-label"></label>
                        <input asp-for="Barcode" class="form-control" />
                        <span asp-validation-for="Barcode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Count" class="control-label"></label>
                        <input asp-for="Count" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <input asp-for="Category" class="form-control" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mb-4">
    <a class="btn btn-warning" asp-action="Index"><i class="fa-sharp fa-solid fa-arrow-left"></i>Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
