@model SoftNET_Project.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="card mb-4 mt-2">
    <div class="card-body">
        <h1>Delete Product</h1>
    </div>
</div>


<h3>Are you sure you want to delete this?</h3>
<div class="card mb-4">
    <div class="card-header bg-danger text-white">
        <i class="fa-solid fa-boxes-stacked"></i>
        <span class="font-weight-bold">Product: </span>@Model.ProductName
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Product Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                Barcode
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Barcode)
            </dd>
            <dt class="col-sm-2">
                Count
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Count)
            </dd>
            <dt class="col-sm-2">
                Price
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                Category
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> 
    <a class="btn btn-warning" asp-action="Index"><i class="fa-sharp fa-solid fa-arrow-left"></i>Back to List</a>
</form>
