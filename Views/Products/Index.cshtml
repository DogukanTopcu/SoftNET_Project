@model IEnumerable<SoftNET_Project.Models.Product>

@{
    ViewData["Title"] = "Index";
}


<div class="card mb-4 mt-1">
    <div class="card-body">
        <h1>All Products</h1>
    </div>
</div>


<p>
    <a asp-action="Barcode" class="btn btn-outline-primary">Create New Product</a>
</p>

<div class="card mb-4">
    <div class="card-header">
        <i class="fa-solid fa-boxes-stacked"></i>
        Products Table
    </div>
    <div class="card-body">
        <table id="sample_table" class="table">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Barcode
                    </th>
                    <th>
                        Count
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Barcode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Count)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td>
                            <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

<div class="mb-4">
    <a class="btn btn-success" href="/Products/ExportExcelProductList">Excel Export</a>
</div>