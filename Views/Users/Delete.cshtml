@model SoftNET_Project.Models.User

@{
    ViewData["Title"] = "Delete";
}

<div class="card mb-4 mt-2">
    <div class="card-body">
        <h1>Delete User</h1>
    </div>
</div>

<h3>Are you sure you want to delete this?</h3>

<div class="card mb-4">
    <div class="card-header bg-danger text-white">
        <i class="fa-solid fa-user"></i>
        <span class="font-weight-bold">User: </span>@Model.Name
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Username
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NickName)
            </dd>
            <dt class="col-sm-2">
                Password
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Password)
            </dd>
            <dt class="col-sm-2">
                Role
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Role)
            </dd>
        </dl>
    </div>

</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="ID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a class="btn btn-warning" asp-action="Index"><i class="fa-sharp fa-solid fa-arrow-left"></i>Back to List</a>
</form>
